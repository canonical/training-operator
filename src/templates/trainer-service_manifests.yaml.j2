---
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-controller-manager
  namespace: {{ namespace }}
spec:
  ports:
    - name: monitoring-port
      port: {{ metrics_port }}
      targetPort: {{ metrics_port }}
    - name: webhook-server
      port: {{ webhook_port }}
      protocol: TCP
      targetPort: {{ webhook_target_port }}
  selector:
    # label added to match only workload pod
    app.kubernetes.io/name: {{ app_name }}-manager
    app.kubernetes.io/component: manager
