---
apiVersion: v1
kind: Service
metadata:
  annotations:
    prometheus.io/path: /metrics
    prometheus.io/scrape: "true"
    prometheus.io/port: "8080"
  labels:
    app: {{ app_name }}
  # Hardcoding this name due to /canonical/training-operator#174
  name: training-operator
  namespace: {{ namespace }}
spec:
  ports:
  - name: monitoring-port
    port: {{ metrics_port }}
    targetPort: {{ metrics_port }}
  selector:
    control-plane: {{ namespace }}-{{ app_name }}
  type: ClusterIP
